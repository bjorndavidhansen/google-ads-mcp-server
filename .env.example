# Google Ads MCP Server - Environment Configuration Template
# Copy this file to .env and fill in the appropriate values for your environment

# Application Settings
APP_ENV=dev                # Environment: dev, test, prod
PORT=8000                  # Server port
LOG_LEVEL=INFO             # Logging level: DEBUG, INFO, WARNING, ERROR
CACHE_ENABLED=true         # Enable caching: true, false
CACHE_TTL=3600             # Cache time-to-live in seconds

# Google Ads API Credentials
GOOGLE_ADS_DEVELOPER_TOKEN=your_developer_token
GOOGLE_ADS_CLIENT_ID=your_client_id
GOOGLE_ADS_CLIENT_SECRET=your_client_secret
GOOGLE_ADS_REFRESH_TOKEN=your_refresh_token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your_login_customer_id
GOOGLE_ADS_CLIENT_CUSTOMER_ID=your_client_customer_id  # Optional, defaults to LOGIN_CUSTOMER_ID

# Feature Flags
ENABLE_ACCOUNT_HIERARCHY=true      # Enable account hierarchy feature
ENABLE_DETAILED_REPORTING=true     # Enable detailed reporting
ENABLE_CLAUDE_ARTIFACTS=true       # Enable Claude Artifacts support 